<controls:ESRequestCreationWindow
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client._ES.Cargo.Requests.Ui"
    Title="{Loc 'es-cargo-request-ui-popup-title'}"
    MinSize="380 280">
    <BoxContainer Orientation="Vertical" Margin="10">
        <PanelContainer HorizontalExpand="True" VerticalExpand="True" Margin="5" StyleClasses="PanelDark">
            <TextEdit Name="BodyLineEdit" HorizontalExpand="True" VerticalExpand="True" Margin="5"/>
        </PanelContainer>
        <Control MinHeight="5"/>
        <BoxContainer Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="CancelButton" Text="{Loc 'es-cargo-request-ui-popup-button-cancel'}" StyleClasses="OpenRight" HorizontalExpand="False"/>
            <Button Name="ConfirmButton" Text="{Loc 'es-cargo-request-ui-popup-button-finish'}" StyleClasses="OpenLeft" HorizontalExpand="False"/>
        </BoxContainer>
    </BoxContainer>
</controls:ESRequestCreationWindow>
